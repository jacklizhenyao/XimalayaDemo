<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_top_rl"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#fff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/title_logo"
            android:layout_marginLeft="10dp"
            />

        <ImageButton
            android:id="@+id/frag_find_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_main_search_btn" />



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#EEECE9"
        />

    <com.lanou.radiostation.view.ViewPagerIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="#fff"
        >
        <TextView
            android:id="@+id/find_recommend_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="推荐"
            android:textSize="13sp"
            android:textColor="#000"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/find_classify_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="分类"
            android:textSize="13sp"
            android:textColor="#000"
            android:gravity="center"

            />
        <TextView
            android:id="@+id/find_broadcast_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="广播"
            android:textSize="13sp"
            android:textColor="#000"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/find_list_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="榜单"
            android:textSize="13sp"
            android:textColor="#000"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/find_anchor_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="主播"
            android:textSize="13sp"
            android:textColor="#000"
            android:gravity="center"
            />

    </com.lanou.radiostation.view.ViewPagerIndicator>

    <android.support.v4.view.ViewPager
        android:id="@+id/frag_find_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></android.support.v4.view.ViewPager>

</LinearLayout>