<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!--标题栏-->
    <com.lanou.radiostation.view.ViewPagerIndicator_recomended
        android:id="@+id/frag_dingyueting_viewpagerindicator"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#F4F4F4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/frag_dingyueting_tv_recommended"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="推荐"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/frag_dingyueting_tv_subscription"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订阅"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/frag_dingyueting_tv_historys"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="历史"
            android:textSize="18sp" />

    </com.lanou.radiostation.view.ViewPagerIndicator_recomended>

    <!--内容区域-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frag_dingyueting_viewpagerindicator"
        android:background="#ECEBE7">

        <android.support.v4.view.ViewPager
            android:id="@+id/frag_dingyueting_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
    </LinearLayout>
</RelativeLayout>