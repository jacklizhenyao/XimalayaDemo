<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/include_title">


    </include>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        >

    </View>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >




        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="70dp"
            >
            <ImageButton
                android:id="@+id/register_ib_wechat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_wechat_pay"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信登录"
                android:layout_below="@+id/register_ib_wechat"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textColor="#f000"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            >
            <ImageButton
                android:id="@+id/register_ib_qq"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/ic_qq"

                android:layout_centerInParent="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ登录"
                android:layout_below="@+id/register_ib_qq"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textColor="#f000"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="70dp"
            >
            <!--微博-->
            <ImageButton
                android:id="@+id/register_ib_microblog"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/share_weibo"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微博登录"
                android:layout_below="@+id/register_ib_microblog"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textColor="#f000"
                />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0000"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >
    </View>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        >
<RelativeLayout
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    >
    <ImageView
        android:id="@+id/register_iv_username"
        android:layout_width="30dp"
        android:layout_height="30dp"
       android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:background="@mipmap/ic_login_username"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/register_iv_username"
       android:layout_marginTop="10dp"
        android:hint="邮箱或者手机号"
        />
</RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <ImageView
                android:id="@+id/register_iv_password"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/ic_login_password"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/register_iv_password"
                android:layout_marginTop="10dp"
                android:hint="输入6-16位数字或字母"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
           <Button
               android:layout_marginLeft="30dp"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="1"
               android:text="注册"
               android:layout_gravity="center"
               android:textSize="18sp"
               android:textColor="#FF0000"
               />
            <Button
                android:layout_marginRight="30dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="登录"
               android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="#fff"
                android:background="#FF0000"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        ></LinearLayout>
</LinearLayout>
